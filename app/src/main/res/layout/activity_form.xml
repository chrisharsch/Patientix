<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="de.teambluebaer.patientix.activities.FormActivity"
    android:background="@drawable/inhaltsseiteapp">



    <!-- Continue Button -->
    <Button
        android:layout_width="210dip"
        android:layout_height="70dip"
        android:text="@string/buttonContinue"
        android:id="@+id/buttonContinue"
        android:visibility="visible"
        android:textSize="40sp"
        android:onClick="onClickNextButton"
        android:background="@drawable/button1x3normal"
        android:layout_marginEnd="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textColor="#fffafa" />


    <!-- Back Button -->
    <Button
        android:layout_width="210dip"
        android:layout_height="70dip"
        android:text="@string/buttonBack"
        android:id="@+id/buttonBack"
        android:textSize="40sp"
        android:onClick="onClickBackButton"
        android:background="@drawable/button1x3normal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="153dp"
        android:textColor="#fffafa" />

    <Button
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:text="@string/buttonZoomIn"
        android:onClick="onClickZoomButton"
        android:background="@drawable/button1x1normal"
        android:id="@+id/buttonZoomIn"
        android:textSize="50sp"
        android:textColor="#fffafa"
        android:layout_alignTop="@+id/buttonZoomOut"
        android:layout_alignStart="@+id/buttonZoomOut" />

    <Button
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:text="@string/buttonZoomOut"
        android:id="@+id/buttonZoomOut"
        android:onClick="onClickZoomButton"
        android:textSize="50sp"
        android:background="@drawable/button1x1normal"
        android:layout_alignParentTop="true"
        android:textColor="#fffafa" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Page"
        android:id="@+id/pageOfNumbers"
        android:layout_marginEnd="178dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/buttonContinue"
        android:textIsSelectable="false" />

    <Button
        android:layout_width="210dip"
        android:layout_height="70dip"
        android:text="@string/buttonOk"
        android:id="@+id/buttonOk"
        android:textSize="40sp"
        android:onClick="onClickButton"
        android:background="@drawable/button1x3normal"
        android:textColor="#fffafa"
        android:layout_above="@+id/buttonContinue"
        android:layout_alignStart="@+id/buttonContinue" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/buttonOk"
        android:layout_alignEnd="@+id/buttonOk"
        android:layout_below="@+id/buttonZoomIn"
        android:id="@+id/content">
    </LinearLayout>

</RelativeLayout>