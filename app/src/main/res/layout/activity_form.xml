<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.patientix.maren.patientix.FormActivity"
    android:background="@drawable/inhaltsseiteapp">



    <!-- Continue Button -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonContinue"
        android:id="@+id/buttonContinue"

        android:textSize="50sp"
        android:onClick="onClickNextButton"
        android:background="@android:color/darker_gray"
        android:layout_marginEnd="209dp"
        android:layout_above="@+id/button"
        android:layout_alignParentEnd="true" />

    <!-- Back Button -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonBack"
        android:id="@+id/buttonBack"
        android:layout_marginStart="218dp"
        android:layout_alignTop="@+id/buttonContinue"
        android:layout_alignParentStart="true"
        android:textSize="50sp"
        android:onClick="onClickBackButton"
        android:background="#ffff9928"
        android:textColor="#ff3b28ff" />

    <TextView
        android:layout_width="1500px"
        android:layout_height="1000px"
        android:text="New Text"
        android:id="@+id/questionText"
        android:textSize="30pt"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="96dp"
        android:layout_above="@+id/buttonContinue"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonZoomMore"
        android:onClick="onClickZoomButtonMore"

        android:id="@+id/button"
        android:textSize="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/buttonContinue"
        android:layout_marginEnd="92dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonZoomLow"
        android:id="@+id/button2"
        android:onClick="onClickZoomButtonLow"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/buttonBack"
        android:textSize="50dp" />
</RelativeLayout>
