<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.patientix.maren.patientix.FormActivity"
    android:background="@drawable/inhaltsseiteapp">



    <!-- Continue Button -->
    <Button
        android:layout_width="210dip"
        android:layout_height="70dip"
        android:text="@string/buttonContinue"
        android:id="@+id/buttonContinue"

        android:textSize="40sp"
        android:onClick="onClickNextButton"
        android:background="@drawable/button1x3normal"
        android:layout_marginEnd="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


    <!-- Back Button -->
    <Button
        android:layout_width="210dip"
        android:layout_height="70dip"
        android:text="@string/buttonBack"
        android:id="@+id/buttonBack"
        android:textSize="40sp"
        android:onClick="onClickBackButton"
        android:background="@drawable/button1x3normal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="153dp" />

    <TextView
        android:layout_width="1500px"
        android:layout_height="1000px"
        android:text="New Text"
        android:id="@+id/questionText"
        android:textSize="30pt"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="76dp"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:text="@string/buttonZoomIn"
        android:onClick="onClickZoomButtonIn"
        android:background="@drawable/button1x1normal"
        android:id="@+id/buttonZoomIn"
        android:textSize="50dp"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:text="@string/buttonZoomOut"
        android:id="@+id/buttonZoomOut"
        android:onClick="onClickZoomButtonOut"
        android:textSize="50dp"
        android:background="@drawable/button1x1normal"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/buttonBack" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Page"
        android:id="@+id/pageOfNumbers"
        android:layout_marginEnd="178dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/buttonContinue" />

</RelativeLayout>